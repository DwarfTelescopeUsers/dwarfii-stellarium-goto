{
  "root": true,
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "plugins": ["testing-library"],
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"],
      "globals": {
        "describe": true,
        "expect": true,
        "it": true,
        "test": true,
        "xit": true,
        "jest": true
      }
    }
  ]
}
